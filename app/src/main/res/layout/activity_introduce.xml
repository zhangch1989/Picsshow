<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/main_bg"
    tools:context="com.zch.picsshow.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/top_bg"
        >
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@mipmap/btn_back"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/top_title_margintop"
            android:paddingLeft="@dimen/top_btn_paddingleft"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/top_btn_paddingleft"
            android:layout_marginTop="@dimen/top_title_margintop"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/icon_logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/top_title_margintop"
            android:text="重庆市环卫集团有限公司"
            android:textColor="@color/white"
            android:textSize="@dimen/top_textsize"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_bottom_height"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bottom_btn_margintop"
            >
            <Button
                android:id="@+id/btn_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bottom_btn"
                android:text="首页"
                android:background="@mipmap/main_btn_bg"
                />
            <Button
                android:id="@+id/btn_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                style="@style/bottom_btn"
                android:text="餐厨垃圾处置项目"
                android:background="@mipmap/main_btn_bg"
                />
            <Button
                android:id="@+id/btn_studio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                style="@style/bottom_btn"
                android:text="劳模创新工作室"
                android:background="@mipmap/main_btn_bg"
                />
        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:layout_above="@id/rl_bottom">
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/top_btn_paddingleft"
        android:paddingRight="@dimen/top_btn_paddingleft"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:textSize="@dimen/introduce_title_textsize"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
        <TextView
            android:id="@+id/tv11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/introduce_textcolor"
            android:layout_marginTop="@dimen/introduce_margintop"
            android:textSize="@dimen/introduce_textsize"/>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
